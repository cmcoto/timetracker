<!DOCTYPE html>
<html>
<head>
  <title>Timetracker</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header class="container">
  <nav class="navbar navbar-default">
    <div class="navbar-header">
      <%= link_to 'Time Tracker', root_path, class: 'navbar-brand' %>
      <%= link_to "Sign in", new_user_session_path, class: 'navbar-brand' %>
    </div>
      <% if user_signed_in? %>
      <div class="pull-right right-buttons">
        <%= link_to "Users", users_path, class: 'navbar-brand' %>
        <%= link_to 'Sign out', destroy_user_session_path, method: 'delete', class: 'btn btn-default navbar-btn' %>
      </div>
    <% end %>
  </nav>
  
</header>

<div class="container">
	<% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, class: "alert alert -#(name)" %>
	<% end %>

	<div class="row">
		<%= yield %>
	</div>
</div>
</body>
</html>
